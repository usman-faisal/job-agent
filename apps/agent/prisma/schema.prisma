generator client {
  provider = "prisma-client-py"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://test:test@localhost:5432/postgres"
}

enum Role {
  user
  assistant
}

model Message {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  content      String
  role         Role
}
